<CanvasExample3>:
    canvas:
        Color:
            rgba: 1, 0, 0, 0.3
        Line:
            circle: (200, 200, 100) # center_x, center_y, radius
            width: 2
        Line:
            ellipse: (500, 300, 100, 200) # center_x, center_y, radius_x, radius_y
            width: 2
        Color:
            rgba: 0, 0, 1, 1
        Line:
            rectangle: (400, 100, 300, 50) # x, y, w, h
            width: 2

<CanvasExample2>:
    canvas:
        Line:
            points: (0, self.height/2, self.width, self.height/2)
            width: 1
        Line:
            points: (self.width/2, self.height, self.width/2, 0)
            width: 1

<CanvasExample1>:
    canvas:
        Rectangle:
            pos: self.center_x-s/2, self.center_y-s/2
            size: s, s
        Ellipse:
            pos: 100, 200
            size: s, s/2
        Line:
            points: (0, 0, 100, 100, 200, 0, 300, 200, 400, 200, self.width, 100)
            width: 3

