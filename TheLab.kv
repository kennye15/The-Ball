<WidgetsExample>:
    cols: 3
    Button:
        text: "Click here -1"
        on_press: root.on_button_click2()
        font_name: "fonts/Lcd.ttf"
        font_size: "30dp"
        disabled: not root.count_enabled

    Button:
        text: "Click here +1"
        on_press: root.on_button_click1()
        font_name: "fonts/Lcd.ttf"
        font_size: "30dp"
        disabled: not root.count_enabled

    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: "#adff2f"

    ToggleButton:
        text: "OFF"
        on_press: root.on_button_click3(self)

    Switch:
        id: my_switch1
        on_active: root.on_button_click4(self)
        size_hint: None, 1
        width: "100dp"
        active: True

    Slider:
        id: my_slider
        min: 0
        max: 100
        value: 50
        on_value: root.on_button_click5(self)
        orientation: "horizontal" # vertical
        disabled: not my_switch1.active

    Label:
        text: root.slider_value_txt

    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(my_slider.value))
        ProgressBar:
            max: 100
            value: my_slider.value

    TextInput:
        id: my_text_input1
        size_hint: None, 1
        width: "100dp"
        text: "foo"
        multiline: False
        on_text_validate: root.on_text_validate(self)

    Label:
        text: "Kenny " + root.text_input_str

<AnchorLayoutExample>:
    # right, left, center
    anchor_x: "left"
    # bottom, top, center
    anchor_y: "top"
    BoxLayout:
        size_hint: 0.5, 0.5
        Button:
            text: "A"
        Button:
            text: "B"
        Button:
            text: "C"

<BoxLayoutExample>:
    orientation: "vertical" #// horizontal
    Button:
        text: "A"
        # size: "80dp", "40dp" #// Here cannot use [size] this order
        size_hint: 0.5, None
        # width: "100dp"
        # height: "60dp"
        # x, center_x, right
        # y, center_y, top
        pos_hint: { "x": 0.25 }

    BoxLayout:
        orientation: "horizontal"
        spacing: "10dp"
        Button:
            text: "B"
        Button:
            text: "C"
        Button:
            text: "D"
        Button:
            text: "D"

